@model DepartmentViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Create" method="post" enctype="multipart/form-data">

    <div class="form-group m-3">
        <label asp-for="Name" class="control-label"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group m-3">
        <label asp-for="Creation_Date" class="control-label"></label>
        <input type="date" asp-for="Creation_Date" class="form-control"/>
        
    </div>

    <div class="form-group m-3">
        <label for="Image" class="control-label">Profile Image</label>
        <input type="file" name="Image" class="form-control-file" />
    </div>

    <div class="form-group m-3">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>

</form>
<div class="m-3">
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


