@model DepartmentViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Delete">
    <div class="form-group m-3">
        <img src="~/Files/Images/@Model.ImageName" class="card-img-top" style="width: 150px; height: 150px;" />
    </div>
    <div class="form-group m-3">
        <label asp-for="Name" class="control-label"></label>
        <input type="text" asp-for="Name" class="form-control" readonly />

    </div>

    <div class="form-group m-3">
        <label asp-for="Creation_Date" class="control-label"></label>
        <input type="text" asp-for="Creation_Date" class="form-control" readonly />

    </div>

    <div>
        <input hidden asp-for="ImageName" />
    </div>
    
    <div class="form-group m-3">
        <p>Are You Sure You Want To Delete This Employee?</p>
    </div>
    <div class="form-group m-3">
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
    
    <div class="form-group m-3">
        <a asp-action="Index" class="btn btn-primary">Back To List</a>
    </div>
</form>

