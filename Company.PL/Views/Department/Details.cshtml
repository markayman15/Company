@model DepartmentViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="form-group m-3">
        <img src="~/Files/Images/@Model.ImageName" class="card-img-top" style="width: 150px; height: 150px;" />
    </div>
    <div class="form-group m-3">
        <label asp-for="Name" class="control-label"></label>
        <input type="text" asp-for="Name" class="form-control" readonly/>
        
    </div>

    <div class="form-group m-3">
        <label asp-for="Creation_Date" class="control-label"></label>
    <input type="date" asp-for="Creation_Date" class="form-control" readonly />
        
    </div>

    <div class="form-group m-3">
        
        <input type="text" hidden asp-for="ImageName" class="form-control" readonly/>
        
    </div>
<div class="form-group m-3">
    <a asp-action="Index" class="btn btn-primary">Back To List</a>
</div>

   


