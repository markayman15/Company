@model EmployeeViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="form-group m-3">
        <img src="~/Files/Images/@Model.ImageName" class="card-img-top" style="width: 150px; height: 150px;" />
    </div>
    <div class="form-group m-3">
        <label asp-for="Name" class="control-label"></label>
        <input type="text" asp-for="Name" class="form-control" readonly/>
        
    </div>

    <div class="form-group m-3">
        <label asp-for="Age" class="control-label"></label>
        <input type="text" asp-for="Age" class="form-control" readonly/>
        
    </div>

    <div class="form-group m-3">
        <label asp-for="Job_Title" class="control-label"></label>
        <input type="text" asp-for="Job_Title" class="form-control" readonly/>
        
    </div>

    <div class="form-group m-3">
        <label asp-for="Email" class="control-label"></label>
        <input type="text" asp-for="Email" class="form-control" readonly/>
        
    </div>
<div class="form-group m-3">
    <label asp-for="Dept_Id" class="control-label"></label>
    <input type="text" asp-for="Dept_Id" class="form-control" readonly/>
    
</div>
<div class="form-group m-3">
    <a asp-action="Index" class="btn btn-primary">Back To List</a>
</div>

   


