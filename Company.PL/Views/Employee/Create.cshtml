@model EmployeeViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var departments = new SelectList(ViewData["Departments"] as IEnumerable<Department>, nameof(Department.Department_Id), nameof(Department.Name));

}

<form asp-action="Create" method="post" enctype="multipart/form-data">

    <div class="form-group m-3">
        <label asp-for="Name" class="control-label"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group m-3">
        <label asp-for="Age" class="control-label"></label>
        <input type="text" asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group m-3">
        <label asp-for="Job_Title" class="control-label"></label>
        <input type="text" asp-for="Job_Title" class="form-control" />
        <span asp-validation-for="Job_Title" class="text-danger"></span>
    </div>

    <div class="form-group m-3">
        <label asp-for="Email" class="control-label"></label>
        <input type="text" asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group m-3">
        <label asp-for="Department" class="control-label"></label>
        <select class="form-control" asp-items="departments" asp-for="Dept_Id">
            <option value="null">---Select Department---</option>
        </select>

    </div>

    <div class="form-group m-3">
        <label for="Image" class="control-label">Profile Image</label>
        <input type="file" name="Image" class="form-control-file" />
    </div>

    <div class="form-group m-3">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


